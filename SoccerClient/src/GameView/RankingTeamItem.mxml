<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark" 
				xmlns:mx="library://ns.adobe.com/flex/mx" 
				xmlns:Match="GameView.Match.*"
				autoDrawBackground="false" width="100%" height="51" xmlns:GameView="GameView.*" >
	
	<fx:Style source="styles.css" />
	
	<fx:Script>
		<![CDATA[
			import GameModel.PredefinedTeamsModel;
		]]>
	</fx:Script>
	
	<fx:Declarations>
		<s:GlowFilter id="txtGlowFilter"  alpha="0.75" blurX="6" blurY="6" color="#FFFFFF" inner="false"
					  knockout="false" quality="2" strength="1"/>
	</fx:Declarations>
		
	<s:states>
		<s:State name="normal" />
		<s:State name="selected"/>
		<s:State name="hovered"/>
	</s:states>
		
	<s:Graphic includeIn="hovered">
		<s:Rect x="0" y="0" width="423" height="50">
			<s:fill>
				<s:SolidColor color="#666666" alpha="0.3" />
			</s:fill>
		</s:Rect>
	</s:Graphic>
	
	<s:Graphic includeIn="selected">
		<s:Rect x="0" y="0" width="423" height="50">
			<s:fill>
				<s:SolidColor color="#999999" alpha="0.3" />
			</s:fill>
		</s:Rect>
	</s:Graphic>

	<s:Group width="100%" height="43">
		<s:layout><s:HorizontalLayout/></s:layout>
		
		<GameView:FacebookPicture FacebookID="{data.FacebookID}" />

		<s:Group>
			<s:layout><s:VerticalLayout paddingTop="4" /></s:layout>
			<GameView:BadgeTeam TeamNameID="{data.PredefinedTeamNameID}" />
		</s:Group>
		
		<s:Group height="50">
		 	<s:layout><s:VerticalLayout paddingTop="7" gap="3"/></s:layout>
			<s:Label width="122" text="{data.Name}" styleName="whiteBoldBig" maxDisplayedLines="1" toolTip="{data.Name}"/>
			<s:Label maxWidth="122" text="{PredefinedTeamsModel.Localize(data.PredefinedTeamNameID)}" styleName="greyBoldMedium"/>
		</s:Group>
		
		<s:Label width="34" height="50" styleName="whiteBoldHuge" verticalAlign="middle" textAlign="center"
				 text="{SoccerClient.GetMainGameModel().TheTeamModel.ConvertXPToLevel(data.XP)}" filters="{txtGlowFilter}"/>

	</s:Group>

	<s:Group right="0">
		<s:Rect x="0" y="0" width="65" height="37" alpha="0.2">
			<s:fill>
				<s:SolidColor color="#FFFFFF" />
			</s:fill>
		</s:Rect>
		<GameView:BadgeCategory TrueSkill="{data.TrueSkill}"/>
		<s:Rect x="0" y="37" width="65" height="14" alpha="0.7">
			<s:fill>
				<s:SolidColor color="#FFFFFF" />
			</s:fill>
		</s:Rect>
		<s:Label horizontalCenter="0" y="36" styleName="blackBoldMediumHN" verticalAlign="middle" textAlign="center" width="65"
				 text="{data.TrueSkill}"/>
	</s:Group>
	
	<s:Graphic>
		<s:Line xFrom="0" xTo="423" yFrom="50" yTo="50">
			<s:stroke>
				<s:SolidColorStroke color="0x686b6e" weight="1"/>
			</s:stroke>
		</s:Line>
	</s:Graphic>
	
</s:ItemRenderer>