<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark"
		 xmlns:mx="library://ns.adobe.com/flex/mx"
		 xmlns:GameView="GameView.*"
		 width="760" height="35"
		 creationComplete="CreationCompleteHandler(event)"
		 visible="{mRewardsModel.IsSponsorPayOfferAvailable}"
		 >
	
	<fx:Style source="styles.css"/>
	
	<fx:Declarations>
		<!--<s:GlowFilter id="glowNormal" strength="1" alpha="0.7" blurX="10" blurY="10" color="#FFFFFF"/>-->
	</fx:Declarations>
	
	<fx:Script><![CDATA[
		import GameModel.MainGameModel;
		import GameModel.RewardsModel;
		
		import mx.events.FlexEvent;

		protected function CreationCompleteHandler(event:FlexEvent):void
		{
			mGameModel = SoccerClient.GetMainGameModel();
			mRewardsModel = mGameModel.TheRewardsModel;				
		}
					
		protected function VideoClickHereClickHandler(event:MouseEvent):void
		{
			mRewardsModel.PlaySponsorPayVideo();			
		}
		
		[Bindable]
		private var mRewardsModel : RewardsModel;
		private var mGameModel : MainGameModel;
		
	]]></fx:Script>

	<s:BitmapImage source="{resourceManager.getClass('main','BannerVideoFreeMatches')}" fillMode="clip" />
	<s:Button label="{resourceManager.getString('main','ClickHere')}" minWidth="86" top="5" right="82" skinClass="GameView.Skins.ButtonDarkGreySkin" click="VideoClickHereClickHandler(event)" />
	
