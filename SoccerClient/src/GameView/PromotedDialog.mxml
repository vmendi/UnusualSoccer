<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark"
		 xmlns:Team="GameView.Team.*" xmlns:GameView="GameView.*"
		 width="400" height="226" xmlns:Competition="GameView.Competition.*">
	
	<fx:Style source="styles.css"/>
	
	<fx:Script>
		<![CDATA[
			import GameModel.TeamModel;
			
			import GameView.AnimatableDialog;
			
			import mx.collections.ArrayCollection;
			
			public static function Show() : void
			{
				var dialog : PromotedDialog = AnimatableDialog.Show(getDefinitionByName("GameView::PromotedDialog") as Class) as PromotedDialog;
				
				dialog.MyDivisionBadge.Division = SoccerClient.GetMainGameModel().TheCompetitionModel.TheGroup.DivisionName;
			}
			
			protected function CloseClickHandler(event:MouseEvent):void
			{
				AnimatableDialog.Dismiss(this, null);
			}
		]]>
	</fx:Script>
	
	<GameView:PopupBackground width="100%" height="100%" />
	
	<Competition:DivisionBadge id="MyDivisionBadge" />
	
	<s:Button label="CERRAR" horizontalCenter="0" bottom="15" click="CloseClickHandler(event)" minWidth="80" skinClass="GameView.Skins.ButtonDarkGreySkin" />
	
</s:Group>

