<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx"
		 width="100%" height="100%" cacheAsBitmap="true">

	<fx:Script><![CDATA[
		import mx.events.FlexEvent;
		
		[Bindable]
		public function get Msg() : String { return mMsg; }
		public function set Msg(msg : String) : void
		{
			mMsg = msg;
			Refresh();
		}
		
		private function Refresh():void
		{
			myMsg.text = mMsg;
		}
		
		private var mMsg : String = null;
		
	]]></fx:Script>
	
	<s:Group>
		<s:Rect left="-10" right="-10" top="-10" bottom="-10" alpha="1" radiusX="10">
			<s:fill>
				<s:SolidColor alpha="0.6" color="#000000"/>
			</s:fill>
		</s:Rect>
		<s:Group left="0" right="0" top="0" bottom="0">
			<s:Label id="myMsg"
					 maxWidth="180"
					 textAlign="center"
					 verticalAlign="middle"
					 top="0" bottom="0"
					 horizontalCenter="0" verticalCenter="0"
					 styleName="whiteBoldBig" />
			<s:filters>
				<s:DropShadowFilter angle="90" distance="1" blurX="1" blurY="1" color="0xFFFFFF" />
			</s:filters>
		</s:Group>
	</s:Group>
	
</s:Group>
