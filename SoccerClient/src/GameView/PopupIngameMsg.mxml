<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx"
		 width="100%" height="100%" cacheAsBitmap="true" mouseChildren="false" mouseEnabled="false">

	<fx:Script><![CDATA[
		import mx.core.FlexGlobals;
		import mx.core.IFlexModule;
		import mx.events.EffectEvent;
		import mx.managers.PopUpManager;
		
		
		public static function Show(text : String) : void
		{
			var theDialog : PopupIngameMsg = new PopupIngameMsg();
			var parent : Sprite = FlexGlobals.topLevelApplication as Sprite;
			
			theDialog.Msg = text;
			
			theDialog.moduleFactory = IFlexModule(parent).moduleFactory;
			
			PopUpManager.addPopUp(theDialog, parent, false, null);
			PopUpManager.centerPopUp(theDialog);
			
			theDialog.MySequence.play();
		}
		
		protected function MySequence_effectEndHandler(event:EffectEvent):void
		{
			PopUpManager.removePopUp(this);			
		}
		
		[Bindable]
		public function get Msg() : String { return mMsg; }
		public function set Msg(msg : String) : void { mMsg = msg; }
		
		private var mMsg : String = null;
		
	]]></fx:Script>
	
	<fx:Declarations>
		<s:Sequence id="MySequence" effectEnd="MySequence_effectEndHandler(event)">
			<s:Fade target="{this}" alphaFrom="0" alphaTo="1" duration="500"/>	
			<s:Fade target="{this}" alphaFrom="1" alphaTo="1" duration="1000"/>
			<s:Fade target="{this}" alphaFrom="1" alphaTo="0" duration="500"/>
		</s:Sequence>			
	</fx:Declarations>
	
	
	<s:Group>
		<s:Rect left="-10" right="-10" top="-10" bottom="-10" alpha="1" radiusX="10">
			<s:fill>
				<s:SolidColor alpha="0.6" color="#000000"/>
			</s:fill>
		</s:Rect>
		<s:Group left="0" right="0" top="0" bottom="0">
			<s:Label id="myMsg"
					 maxWidth="180"
					 textAlign="center"
					 verticalAlign="middle"
					 top="0" bottom="0"
					 horizontalCenter="0" verticalCenter="0"
					 styleName="whiteBoldBig"
					 text="{Msg}"/>
			<s:filters>
				<s:DropShadowFilter angle="90" distance="1" blurX="1" blurY="1" color="0xFFFFFF" />
			</s:filters>
		</s:Group>
	</s:Group>
	
</s:Group>
