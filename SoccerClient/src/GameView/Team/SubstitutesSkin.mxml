<?xml version="1.0" encoding="utf-8"?>
<s:SparkSkin xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark"
      xmlns:fb="http://ns.adobe.com/flashbuilder/2009" minWidth="112"
      alpha.disabled="0.5" blendMode="normal"> 
    
    <fx:Metadata><![CDATA[ 
        [HostComponent("spark.components.List")]
    ]]></fx:Metadata> 
	
	<fx:Style>
		@namespace s "library://ns.adobe.com/flex/spark";
		
		.substitutesTit {
			font-family:MyFontHelveticaNeueLTBold;
			font-size:15pt;
			font-weight:bold;
			color:#FFFFFF;
		}
	</fx:Style>
    
    <s:states>
        <s:State name="normal" />
        <s:State name="disabled" />
    </s:states>
	
	<s:BitmapImage source="@Embed(source='/Assets/General.swf', symbol='BackSubstitutes')" fillMode="clip" />
    
	<s:Label top="7" width="300" horizontalCenter="0" text="{resourceManager.getString('main','TeamPanelSubstitutesTitle')}" styleName="substitutesTit" textAlign="center" >
		<s:filters>
			<s:DropShadowFilter angle="270" distance="1" blurX="1" blurY="1" color="0x444444" />
		</s:filters>
	</s:Label>
	
    <s:Scroller width="321" top="32" height="93" left="12" id="scroller" hasFocusableChildren="false" skinClass="GameView.Skins.DefaultScrollerSkin" >
		<s:DataGroup id="dataGroup"
					 left="0" top="0" right="0" bottom="0" 
					 hasFocusableChildren="false">
			<s:layout>
				 <s:HorizontalLayout gap="10" verticalAlign="middle"/>				 
			 </s:layout>
		</s:DataGroup>
    </s:Scroller>
</s:SparkSkin>
