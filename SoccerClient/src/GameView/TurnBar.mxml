<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark"
		 xmlns:mx="library://ns.adobe.com/flex/mx" 
		 minWidth="138" minHeight="8"
		 >
	
	<fx:Declarations>
		<s:Animate id="MyAnimateEffect"
				   target="{MyTurnBar}" repeatCount="1" 
				   repeatBehavior="loop"
				   duration="500">
			<s:motionPaths>
				<s:SimpleMotionPath property="percentWidth" valueFrom="0" valueTo="100"/>
			</s:motionPaths>
		</s:Animate>
	</fx:Declarations>
	
	<fx:Script><![CDATA[
		import mx.events.FlexEvent;
		
		public function get AnimationEnabled() : Boolean { return mAnimationEnabled; }
		public function set AnimationEnabled(v : Boolean) : void { mAnimationEnabled = v; }
		
		[Bindable]
		public function get Percent() : Number { return mPercent; }
		public function set Percent(v:Number) : void 
		{ 
			MyAnimateEffect.stop();
			
			if (!isNaN(MyTurnBar.percentWidth) && mAnimationEnabled)
			{
				(MyAnimateEffect.motionPaths[0] as SimpleMotionPath).valueFrom = MyTurnBar.percentWidth;
				mPercent = v;			
				(MyAnimateEffect.motionPaths[0] as SimpleMotionPath).valueTo = mPercent;
				
				MyAnimateEffect.play();
			}
			else
			{
				mPercent = v;
				MyTurnBar.percentWidth = mPercent;
			}
			
			MyTurnBar.visible = true;
		}
		
		private var mAnimationEnabled : Boolean = true;
		private var mPercent : Number = -1;
		
	]]></fx:Script>
	
	
	<s:Rect id="MyTurnBarBg" left="0" top="0" right="0" bottom="0" radiusX="4">
		<s:fill>
			<s:SolidColor color="#373737"/>
		</s:fill>
	</s:Rect>

	<s:Rect id="MyTurnBar" left="0" top="0" right="0" bottom="0" radiusX="4">
		<s:fill>
			<s:SolidColor color="#e7dd4d"/>
		</s:fill>
		<s:filters>
			<s:GlowFilter alpha="0.75" blurX="8" blurY="8" color="#e7dd4d" inner="false"
						  knockout="false" quality="2" strength="2"/>
		</s:filters>
	</s:Rect>
	

	
</s:Group>
