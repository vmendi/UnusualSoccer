<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" xmlns:mx="library://ns.adobe.com/flex/mx"
		 width="64" height="43">
	
	<fx:Script><![CDATA[
		import mx.events.FlexEvent;
		
		[Bindable]
		public function get TrueSkill() : Number { return mTrueSkill; }		
		public function set TrueSkill(trueSkill : Number) : void
		{
			mTrueSkill = trueSkill;
			
			var normalized : int = Math.floor((mTrueSkill / 2000)) + 1;

			if (normalized > 5)
				normalized = 5;
			
			MyBitmap.visible = true;
			(MyBitmap.content as MovieClip).gotoAndStop("categoria"+normalized.toString());			
		}
		
		private var mTrueSkill : int = -1;

	]]></fx:Script>
	
	<s:SWFLoader id="MyBitmap" width="64" visible="false" source="{resourceManager.getClass('main','CategoriesIcons')}" />
</s:Group>
