<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" width="100%" height="100%"
		 creationComplete="CreationCompleteHandler(event)"
		 addedToStage="AddedToStageHandler(event)"
		 >
	
	<fx:Script><![CDATA[
		import GameModel.MainGameModel;
		import mx.events.FlexEvent;
		
		protected function AddedToStageHandler(event:Event):void
		{
			GameMetrics.ReportPageView(GameMetrics.VIEW_TRAININGSPECIAL);
		}
		
		protected function CreationCompleteHandler(event:FlexEvent):void
		{
			mMainGameModel = SoccerClient.GetMainGameModel();
		}
		
		[Bindable] private var mMainGameModel : MainGameModel;
		
	]]></fx:Script>
	
	<s:Panel title="{resourceManager.getString('main','TrainingSpecialPanelTitle')}" skinClass="GameView.Skins.DefaultPanelSkin" top="10" left="10" width="740" height="470">
		<s:Rect id="base" left="0" right="0" height="64">
			<s:fill><s:SolidColor color="#000000" alpha="0.5" /></s:fill>
		</s:Rect>
		<s:Label x="20" y="14" width="700" text="{resourceManager.getString('main','TrainingSpecialPanelTxt')}" styleName="whiteBoldBig" textAlign="center" />
		<s:SkinnableDataContainer y="64" id="MyTrainingList"
								  dataProvider="{mMainGameModel.TheTeamModel.TheTeam.SpecialTrainings}" 
								  itemRenderer="GameView.Training.TrainingSpecialListItem" width="100%" height="100%"
								  skinClass="GameView.Skins.DefaultListSkin"/>
	</s:Panel>
	
</s:Group>