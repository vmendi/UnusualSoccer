<?xml version="1.0" encoding="utf-8"?>
<mx:Application xmlns:mx="http://www.adobe.com/2006/mxml" layout="absolute" applicationComplete="init()">
	<mx:Script source="FlexExample.as"/>	
	<mx:HBox width="100%" height="100%" horizontalAlign="center" verticalAlign="middle">
		<mx:VBox width="400" height="100%"
			maxHeight="600" minHeight="200" >
			<mx:HBox width="100%">
				<mx:Label text="Client id:"/>
				<mx:TextInput id="clientIdField" width="100%" />
			</mx:HBox>
			<mx:TextArea id="log" width="100%" height="100%"/>
			<mx:HBox width="100%">
				<mx:Label text="Message:"/>
				<mx:TextInput id="messageField" width="100%" />
			</mx:HBox>
			<mx:Button label="Publish" click="onClick()"/>
		</mx:VBox>
	</mx:HBox>
</mx:Application>
