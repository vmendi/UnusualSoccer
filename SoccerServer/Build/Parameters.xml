<?xml version="1.0" encoding="utf-8"?>
<parameters>

	<parameter name="connectionString">
		<parameterEntry kind="XmlFile" scope="web\.config$" 
						match="/configuration/connectionStrings/add[@name='SoccerV2ConnectionString']/@connectionString"/>
	</parameter>

	<parameter name="appId">
		<parameterEntry kind="XmlFile" scope="web\.config$" match="/configuration/facebookSettings/@appId"/>
	</parameter>
	<parameter name="appSecret">
		<parameterEntry kind="XmlFile" scope="web\.config$" match="/configuration/facebookSettings/@appSecret"/>
	</parameter>
	<parameter name="canvasPage">
		<parameterEntry kind="XmlFile" scope="web\.config$" match="/configuration/facebookSettings/@canvasPage"/>
	</parameter>
	<parameter name="canvasUrl">
		<parameterEntry kind="XmlFile" scope="web\.config$" match="/configuration/facebookSettings/@canvasUrl"/>
	</parameter>
	<parameter name="secureCanvasUrl">
		<parameterEntry kind="XmlFile" scope="web\.config$" match="/configuration/facebookSettings/@secureCanvasUrl"/>
	</parameter>
	<parameter name="cancelUrlPath" defaultValue="Cancelled.aspx">
		<parameterEntry kind="XmlFile" scope="web\.config$" match="/configuration/facebookSettings/@cancelUrlPath"/>
	</parameter>

	<parameter name="versionID">
		<parameterEntry kind="XmlFile" scope="web\.config$" match="/configuration/soccerServerConfig/@versionID"/>
	</parameter>
	<parameter name="enableRealtime">
		<parameterEntry kind="XmlFile" scope="web\.config$" match="/configuration/soccerServerConfig/@enableRealtime"/>
	</parameter>
	<parameter name="ticketingSystem">
		<parameterEntry kind="XmlFile" scope="web\.config$" match="/configuration/soccerServerConfig/@ticketingSystem"/>
	</parameter>
	<parameter name="sameIPChecked">
		<parameterEntry kind="XmlFile" scope="web\.config$" match="/configuration/soccerServerConfig/@sameIPChecked"/>
	</parameter>
	<parameter name="tooManyTimesChecked">
		<parameterEntry kind="XmlFile" scope="web\.config$" match="/configuration/soccerServerConfig/@tooManyTimesChecked"/>
	</parameter>
	<parameter name="remoteServer" defaultValue="">
		<parameterEntry kind="XmlFile" scope="web\.config$" match="/configuration/soccerServerConfig/@remoteServer"/>
	</parameter>
	<parameter name="realtimeServer" defaultValue="">
		<parameterEntry kind="XmlFile" scope="web\.config$" match="/configuration/soccerServerConfig/@realtimeServer"/>
	</parameter>
	<parameter name="cdn" defaultValue="">
		<parameterEntry kind="XmlFile" scope="web\.config$" match="/configuration/soccerServerConfig/@cdn"/>
	</parameter>
	<parameter name="dashboards" defaultValue="false">
		<parameterEntry kind="XmlFile" scope="web\.config$" match="/configuration/soccerServerConfig/@dashboards"/>
	</parameter>

	<!-- Se hace con el * para que sea "en cualquier namespace", por el problema de que NLog.config tiene aplicado un xmlns.
		 http://social.msdn.microsoft.com/Forums/eu/xmlandnetfx/thread/20cae029-62eb-4795-97c5-f741c2f01e07
	-->
	<parameter name="networkLog">
		<parameterEntry kind="XmlFile" scope="NLog\.config$" match="//*[name()='target'][@name='network']/@address"/>
	</parameter>


</parameters>