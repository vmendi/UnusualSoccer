<!--- The default skin class for the Spark Button component.  

       @see spark.components.Button
        
      @langversion 3.0
      @playerversion Flash 10
      @playerversion AIR 1.5
      @productversion Flex 4
-->
<s:SparkButtonSkin xmlns:fx="http://ns.adobe.com/mxml/2009"
				   xmlns:s="library://ns.adobe.com/flex/spark"
				   xmlns:fb="http://ns.adobe.com/flashbuilder/2009"
				   alpha.disabled="0.5"
				   width.down="148" height.down="148"
				   width.over="148" height.over="148"
				   width.up="148" height.up="148">
     
    <fx:Metadata>
        <![CDATA[ 
        /** 
         * @copy spark.skins.spark.ApplicationSkin#hostComponent
         */
        [HostComponent("spark.components.Button")]
        ]]>
    </fx:Metadata>
    
    <!-- states -->
    <s:states>
        <s:State name="up" />
        <s:State name="over" />
        <s:State name="down" />
        <s:State name="disabled" />
    </s:states>
    
    <!--- @private -->
	<s:Image id="btnNormal" includeIn="up" width="100%" height="100%" horizontalCenter="0"
			 scaleMode="stretch" smooth="false" smoothingQuality="high" source="Assets\normal.png"
			 verticalCenter="0"/>
	<s:Image id="btnHover" includeIn="over" width="100%" height="100%" horizontalCenter="0"
			 scaleMode="stretch" source="Assets\hover.png" verticalCenter="0"/>
	<s:Image id="btnClick" includeIn="down" width="100%" height="100%" horizontalCenter="0"
			 scaleMode="stretch" source="Assets\click.png" verticalCenter="0"/>
    
</s:SparkButtonSkin>
