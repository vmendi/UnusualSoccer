<!--- The default skin class for the Spark Button component.  

       @see spark.components.Button
        
      @langversion 3.0
      @playerversion Flash 10
      @playerversion AIR 1.5
      @productversion Flex 4
-->
<s:SparkButtonSkin xmlns:fx="http://ns.adobe.com/mxml/2009"
				   xmlns:s="library://ns.adobe.com/flex/spark"
				   xmlns:fb="http://ns.adobe.com/flashbuilder/2009"
				   alpha.disabled="0.5"
				   width.down="64" height.down="64"
				   width.over="64" height.over="64"
				   width.up="64" height.up="64">
     
    <fx:Metadata>
        <![CDATA[ 
        /** 
         * @copy spark.skins.spark.ApplicationSkin#hostComponent
         */
        [HostComponent("spark.components.Button")]
        ]]>
    </fx:Metadata>
    
    <!-- states -->
    <s:states>
        <s:State name="up" />
        <s:State name="over" />
        <s:State name="down" />
        <s:State name="disabled" />
    </s:states>
    
    <!--- @private -->
	<s:Image id="btnNormal" source="Assets\normal.png" includeIn="up"/>
	<s:Image id="btnHover" source="Assets\hover.png" includeIn="over"/>
	<s:Image id="btnClick" source="Assets\click.png" includeIn="down"/>
    
</s:SparkButtonSkin>
